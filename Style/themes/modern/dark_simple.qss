/* 现代深色主题 - Modern Dark Theme */

/* 基础配色变量 */
/* 
主色调: #60A5FA (亮蓝)
背景色: #0F172A (极深蓝)
次要背景: #1E293B (深蓝灰)
文本色: #F1F5F9 (浅蓝白)
强调色: #3B82F6 (现代蓝)
边框色: #334155 (中蓝灰)
成功色: #34D399 (绿色)
警告色: #FBBF24 (黄色)
错误色: #F87171 (红色)
*/

/* 全局设置 */
QWidget {
    background-color: #0F172A;
    color: #F1F5F9;
    font-family: 'Microsoft YaHei UI', 'Inter', 'Segoe UI', sans-serif;
    font-size: 14px;
    selection-background-color: #60A5FA;
    selection-color: #0F172A;
}

/* 标题样式规范 */
QLabel#title, QLabel[styleClass="title"] {
    font-size: 36px;
    font-weight: 700;
    color: #F1F5F9;
    letter-spacing: -0.5px;
    margin: 24px 0;
    text-align: center;
}

QLabel#subtitle, QLabel[styleClass="subtitle"] {
    font-size: 24px;
    font-weight: 600;
    color: #CBD5E1;
    margin: 20px 0;
    letter-spacing: -0.25px;
}

QLabel#header, QLabel[styleClass="header"] {
    font-size: 20px;
    font-weight: 600;
    color: #60A5FA;
    margin: 16px 0;
    padding: 12px 0;
    border-bottom: 3px solid #334155;
}

QLabel#caption, QLabel[styleClass="caption"] {
    font-size: 13px;
    color: #94A3B8;
    font-weight: 400;
}

/* 按钮样式 */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #60A5FA, stop:1 #3B82F6);
    border: none;
    border-radius: 8px;
    padding: 12px 20px;
    color: #0F172A;
    font-weight: 600;
    font-size: 14px;
    min-height: 24px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #3B82F6, stop:1 #2563EB);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #2563EB, stop:1 #1D4ED8);
}

QPushButton:checked {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #34D399, stop:1 #10B981);
    color: #0F172A;
}

QPushButton:disabled {
    background: #334155;
    color: #64748B;
}

/* 次要按钮样式 */
QPushButton[styleClass="secondary"] {
    background: #1E293B;
    border: 2px solid #334155;
    color: #CBD5E1;
}

QPushButton[styleClass="secondary"]:hover {
    background: #334155;
    border-color: #475569;
}

/* 卡片按钮样式 */
QPushButton#CardButton {
    background: #1E293B;
    border: 2px solid #334155;
    border-radius: 16px;
    padding: 20px;
    min-width: 160px;
    min-height: 120px;
    max-width: 160px;
    max-height: 120px;
    color: #F1F5F9;
}

QPushButton#CardButton:hover {
    background: #334155;
    border-color: #60A5FA;
}

QPushButton#CardButton:pressed {
    background: #475569;
}

QPushButton#CardButton:checked {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #60A5FA, stop:1 #3B82F6);
    border-color: #2563EB;
    color: #0F172A;
}

QPushButton#CardButton QLabel {
    background: transparent;
    border: none;
    color: #F1F5F9;
}

QPushButton#CardButton:checked QLabel {
    color: #0F172A;
}

/* 输入框样式 */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #1E293B;
    border: 2px solid #334155;
    border-radius: 8px;
    padding: 12px 16px;
    color: #F1F5F9;
    font-size: 14px;
    font-weight: 400;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #60A5FA;
    background-color: #334155;
}

/* 组合框样式 */
QComboBox {
    background: #1E293B;
    border: 2px solid #334155;
    border-radius: 8px;
    padding: 8px 16px;
    color: #F1F5F9;
    min-height: 24px;
    font-weight: 500;
}

QComboBox:hover {
    border-color: #475569;
}

QComboBox:focus {
    border-color: #60A5FA;
}

QComboBox::drop-down {
    border: none;
    width: 30px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTQiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDE0IDgiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0xIDFMNyA3TDEzIDEiIHN0cm9rZT0iI0YxRjVGOSIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
}

/* 进度条样式 */
QProgressBar {
    border: none;
    border-radius: 12px;
    text-align: center;
    background-color: #334155;
    color: #F1F5F9;
    font-weight: 600;
    height: 24px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #60A5FA, stop:1 #3B82F6);
    border-radius: 12px;
}

/* 滚动条样式 */
QScrollBar:vertical {
    background-color: #1E293B;
    width: 14px;
    border-radius: 7px;
    border: none;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #475569, stop:1 #64748B);
    border-radius: 7px;
    min-height: 30px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #60A5FA, stop:1 #3B82F6);
}

QScrollBar:horizontal {
    background-color: #1E293B;
    height: 14px;
    border-radius: 7px;
    border: none;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #475569, stop:1 #64748B);
    border-radius: 7px;
    min-width: 30px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #60A5FA, stop:1 #3B82F6);
}

/* 分组框样式 */
QGroupBox {
    border: 2px solid #334155;
    border-radius: 12px;
    margin-top: 16px;
    padding-top: 12px;
    color: #F1F5F9;
    font-weight: 600;
    background-color: #1E293B;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 16px;
    padding: 0 12px 0 12px;
    color: #60A5FA;
    font-weight: 700;
    background-color: #0F172A;
}

/* 选项卡样式 */
QTabWidget::pane {
    border: 2px solid #334155;
    border-radius: 12px;
    background-color: #0F172A;
    margin-top: 4px;
}

QTabBar::tab {
    background: #1E293B;
    border: 2px solid #334155;
    padding: 12px 20px;
    margin-right: 4px;
    border-bottom: none;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-weight: 500;
    color: #CBD5E1;
}

QTabBar::tab:selected {
    background: #0F172A;
    border-bottom: 2px solid #60A5FA;
    color: #60A5FA;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background: #334155;
    border-color: #475569;
}

/* 复选框和单选框样式 */
QCheckBox, QRadioButton {
    color: #F1F5F9;
    font-weight: 500;
    spacing: 10px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #334155;
    background-color: #1E293B;
}

QCheckBox::indicator {
    border-radius: 4px;
}

QRadioButton::indicator {
    border-radius: 10px;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #60A5FA;
    border-color: #3B82F6;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #60A5FA;
}

/* 菜单样式 */
QMenuBar {
    background-color: #1E293B;
    border-bottom: 1px solid #334155;
    color: #F1F5F9;
    font-weight: 500;
}

QMenuBar::item {
    padding: 8px 16px;
    background: transparent;
    border-radius: 6px;
    margin: 2px;
}

QMenuBar::item:selected {
    background-color: #60A5FA;
    color: #0F172A;
}

QMenu {
    background-color: #1E293B;
    border: 2px solid #334155;
    border-radius: 12px;
    padding: 8px;
}

QMenu::item {
    padding: 10px 16px;
    border-radius: 6px;
    font-weight: 500;
}

QMenu::item:selected {
    background-color: #60A5FA;
    color: #0F172A;
}

/* 工具提示样式 */
QToolTip {
    background-color: #F1F5F9;
    color: #0F172A;
    border: none;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 13px;
    font-weight: 500;
}

/* 状态栏样式 */
QStatusBar {
    background-color: #1E293B;
    border-top: 1px solid #334155;
    color: #CBD5E1;
    font-weight: 500;
}

/* ===========================================
   页面容器样式 (自动添加)
   =========================================== */
QWidget[objectName="dashboardPage"] {
    background-color: #1E293B;
}

QWidget[objectName="featuresPage"] {
    background-color: #1E293B;
}

QWidget[objectName="cardsContainer"] {
    background-color: transparent;
}

QScrollArea[objectName="pageScrollArea"] {
    border: none;
    background-color: transparent;
}

QLabel[objectName="pageHeader"] {
    font-size: 18px;
    font-weight: 600;
    color: #F1F5F9;
    margin: 10px 0px;
}
/* ===========================================
   占位页面样式 (自动添加)
   =========================================== */
QWidget[objectName="placeholderPage"] {
    background-color: #1E293B;
}

QLabel[objectName="placeholderLabel"] {
    color: #E2E8F0;
    font-size: 16px;
    font-weight: 500;
}


/* ===========================================
   侧边栏样式 (自动添加)
   =========================================== */
QWidget[objectName="sidebar"] {
    background-color: #0F172A;
    border-right: 2px solid #334155;
}
/* ===========================================
   组件尺寸约束 (自动添加) - 以莫兰蒂主题为标准
   =========================================== */
/* 卡片按钮固定尺寸样式 - 莫兰蒂标准 */
QPushButton[objectName*="card"] {
    min-width: 160px;
    max-width: 160px;
    min-height: 120px;
    max-height: 120px;
    background-color: #334155;
    border: 2px solid #475569;
    border-radius: 12px;
    padding: 20px;
    text-align: left;
    color: #E2E8F0;
}

QPushButton[objectName*="card"]:hover {
    background-color: #475569;
    border-color: #64748B;
    border-width: 3px;
    padding: 19px;  /* 补偿边框增加的1px */
}

QPushButton[objectName*="card"]:pressed {
    background-color: #1E293B;
    padding: 21px 19px 19px 21px;  /* 模拟按下效果 */
}

/* 侧边栏按钮固定尺寸样式 - 左对齐 */
QPushButton[objectName*="sidebar"] {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 12px 16px;  /* 左边距减少以实现左对齐 */
    text-align: left;
    color: #E2E8F0;
    min-height: 36px;
    max-height: 36px;
    min-width: 160px;
}

QPushButton[objectName*="sidebar"]:hover {
    background-color: #334155;
    color: #F1F5F9;
}

QPushButton[objectName*="sidebar"]:pressed {
    background-color: #475569;
}

/* ===========================================
   ThemeCardButton 专门样式 - Modern 深色主题
   =========================================== */

/* 主题卡片按钮基础样式 - Modern深色模式 */
QPushButton#ThemeCardButton {
    background-color: #334155;
    border: 2px solid #475569;
    border-radius: 12px;
    padding: 12px;
    color: #E2E8F0;
    min-width: 160px;
    max-width: 160px;
    min-height: 120px;
    max-height: 120px;
}

QPushButton#ThemeCardButton:hover {
    background-color: #475569;
    border-color: #3B82F6;
    border-width: 3px;
    padding: 11px;  /* 补偿边框增加的1px */
}

QPushButton#ThemeCardButton:pressed {
    background-color: #1E293B;
    padding: 13px 11px 11px 13px;  /* 模拟按下效果 */
}

/* 选中状态样式 - Modern深色模式 */
QPushButton#ThemeCardButton:checked {
    background-color: #3B82F6;
    border-color: #2563EB;
    color: #FFFFFF;
}

QPushButton#ThemeCardButton:checked:hover {
    background-color: #2563EB;
    border-color: #1D4ED8;
}

/* 主题卡片内部标签样式 - Modern深色模式 */
QPushButton#ThemeCardButton QLabel {
    background-color: transparent;
    border: none;
    color: #F1F5F9;  /* 浅色文字，确保在深色背景下可读 */
}

QPushButton#ThemeCardButton:enabled QLabel {
    color: #F1F5F9;  /* 浅色文字，加强对比度 */
}

/* 选中状态下的标签文字为白色 */
QPushButton#ThemeCardButton:checked QLabel {
    color: #FFFFFF;
}

QPushButton#ThemeCardButton:checked:enabled QLabel {
    color: #FFFFFF;
}

/* 通过父容器进一步确保样式优先级 - Modern深色模式 */
QWidget[objectName="themeSettingsCard"] QPushButton#ThemeCardButton QLabel {
    color: #F1F5F9;
}

QWidget[objectName="themeSettingsCard"] QPushButton#ThemeCardButton:checked QLabel {
    color: #FFFFFF;
}

/* FINAL ThemeCardButton override - highest priority - Modern深色模式 */
QPushButton#ThemeCardButton QLabel#themeCardName,
QPushButton#ThemeCardButton QLabel#themeCardVariant {
    color: #F1F5F9 !important;
    background-color: transparent !important;
}

QPushButton#ThemeCardButton:checked QLabel#themeCardName,
QPushButton#ThemeCardButton:checked QLabel#themeCardVariant {
    color: #FFFFFF !important;
}


